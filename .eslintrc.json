{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {},
    "plugins": [
        "wdio",
        "standard",
        "promise",
        "chai-friendly",
        "chai-expect"
    ],
    "extends": [
        "plugin:wdio/recommended",
        "eslint:recommended",
        "standard"
    ]
}